# Local Deployment Environment Variables
# Copy this file to .env.local and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (Supabase)
# Option 1: Direct connection string
DATABASE_URL=postgresql://user:password@host:5432/database

# Option 2: Individual database parameters
DB_HOST=db.YOUR_PROJECT_REF.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
DB_SSL=true

# Supabase Configuration (Alternative naming)
SUPABASE_DB_URL=postgresql://user:password@host:5432/database
SUPABASE_HOST=db.YOUR_PROJECT_REF.supabase.co
SUPABASE_DB_NAME=postgres
SUPABASE_USER=postgres
SUPABASE_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
SUPABASE_SSL=true
SUPABASE_PROJECT_REF=YOUR_PROJECT_REF_HERE

# Connection Pooler (Recommended)
DB_USE_POOLER=true
DB_POOLER_HOST=aws-1-ap-south-1.pooler.supabase.com

# Coordinator Service
COORDINATOR_URL=https://coordinator-production-e0a0.up.railway.app
SERVICE_NAME=directory-service
PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
COORDINATOR_PUBLIC_KEY=YOUR_COORDINATOR_PUBLIC_KEY_HERE

# Authentication
AUTH_MODE=dummy
# AUTH_MODE=auth-service
# AUTH_SERVICE_URL=https://auth-service-production.up.railway.app
# JWT_SECRET=YOUR_JWT_SECRET_HERE

# Directory Service URL (for OAuth redirects)
DIRECTORY_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# OAuth Configuration (Optional)
# LINKEDIN_CLIENT_ID=YOUR_LINKEDIN_CLIENT_ID
# LINKEDIN_CLIENT_SECRET=YOUR_LINKEDIN_CLIENT_SECRET
# LINKEDIN_REDIRECT_URI=http://localhost:8080/api/v1/oauth/linkedin/callback
# GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID
# GITHUB_CLIENT_SECRET=YOUR_GITHUB_CLIENT_SECRET
# GITHUB_REDIRECT_URI=http://localhost:8080/api/v1/oauth/github/callback

# AI Services (Optional)
# OPENAI_API_KEY=YOUR_OPENAI_API_KEY
# GEMINI_API_KEY=YOUR_GEMINI_API_KEY

